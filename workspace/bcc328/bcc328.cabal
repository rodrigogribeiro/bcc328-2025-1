library
    -- Import common warning flags.
    import: common-opts

    -- Modules exported by the library.
    exposed-modules:
      -- basic example for lexical analyser generator
      Alex.LexerExample
      -- basic example for LALR parser generator
      Happy.Exp
      Happy.ParserExample
      -- basic example for recursive descendent parser using megaparsec
      Megaparsec.ParserExample
      -- L0: basic expressions.
      L.L0.Backend.CCodegen
      L.L0.Backend.V0Codegen
      L.L0.Frontend.Lexer
      L.L0.Frontend.Parser
      L.L0.Frontend.Syntax
      L.L0.Interpreter.Interp
      -- L1: straight line programs.
      L.L1.Backend.CCodegen
      L.L1.Backend.V1Codegen
      L.L1.Frontend.Syntax
      L.L1.Frontend.RecursiveParser
      L.L1.Frontend.Lexer
      L.L1.Interpreter.Interp
      -- L2: straight line programs with imutable variables.
      L.L2.Backend.V1Codegen
      L.L2.Backend.CCodegen
      L.L2.Frontend.Syntax
      L.L2.Frontend.TypeCheck
      L.L2.Interpreter.Interp
      -- L3: straight line programs with types (just checking)
      L.L3.Backend.V1Codegen
      L.L3.Frontend.Syntax
      L.L3.Frontend.TypeCheck
      -- L4: programs with conditional statements
      L.L4.Backend.V3Codegen
      L.L4.Frontend.L4Lexer
      L.L4.Frontend.L4Parser
      L.L4.Frontend.Syntax
      L.L4.Frontend.TypeCheck
      -- L5: programs with while loops
      L.L5.Backend.V3Codegen
      L.L5.Frontend.L5Lexer
      L.L5.Frontend.L5Parser
      L.L5.Frontend.Syntax
      -- L6: programs with for and do/while loops
      L.L6.Frontend.Syntax
      -- L7: programs with functions
      L.L7.Frontend.L7Lexer
      L.L7.Frontend.L7Parser
      L.L7.Frontend.SCCAnalysis
      L.L7.Frontend.Syntax
      L.L7.Frontend.TypeCheck
      L.L7.Interpreter.Interpreter
      -- Utilities used in whole project
      Utils.Parser
      Utils.Pretty
      Utils.Repl
      Utils.Value
      Utils.Var
      -- V0: stack machine for L0: addition and multiplication
      V.V0.Instr
      V.V0.Interp
      V.V0.Lexer
      V.V0.Parser
      -- V1: stack machine for L1: support for variables and IO
      V.V1.Instr
      V.V1.Interp
      V.V1.V1Lexer
      V.V1.V1Parser
      -- V2: stack machine for L3: support for different types
      V.V2.Instr
      V.V2.Interp
      V.V2.V2Lexer
      V.V2.V2Parser
      -- V3: stack machine with jumps
      V.V3.Instr
      V.V3.Interp
      V.V3.V3Lexer
      V.V3.V3Parser
      -- V4: stack machine with function calls
      V.V4.Instr
      V.V4.Interp
      V.V4.V4Lexer
      V.V4.V4Parser
